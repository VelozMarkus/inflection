taxonomy ExpressionTest
{
//	view true || ( false && false ) { *; }   // true || false && false --> false; true || ( false && false ) --> true
	view isAssignableTo( IdentifiableObject.class ) && hasModifier( Modifier.PUBLIC ) { *; }
//	view test(  42, 43L, 44.1F, 45.2, 'c', "test", true, null ) {}
}

taxonomy FullTaxonomy
{
	view IdentifiableObject, Person { *; }
	
	view Address
	{
		*;
		exclude people;
	}
	
	exclude view CalculatedMembers;
}

taxonomy UseCase1 extends FullTaxonomy
{
	view Address {}
}

// Need the ability to specify class in member selector. E.g.,
// "Person.*" includes only the members of Person and not of CalculatedMembers.
taxonomy UseCase2 extends FullTaxonomy
{
	view Person use PersonAuxiliary1
	{
		*;
		exclude dateOfBirth;
	}
}

taxonomy UseCase3 extends FullTaxonomy
{
	view Person use PersonAuxiliary2
	{
		fullName, email, gender, dateOfBirth, primaryAddress;
	}
}

taxonomy UseCase4 extends FullTaxonomy
{
	view Address { *; }
	view Person {}
}

taxonomy UseCase5 extends FullTaxonomy
{
	view Person use PersonAuxiliary3 { firstName, lastName, title, telephone, mobile, email, gender, dateOfBirth, addressesUnidir as addresses; }
	view Address { *; exclude people; }
}
