package ch.liquidmind.inflection.test.model;

import java.lang.reflect.Modifier;

// expression1 = expression2 booleanOr expression3
// true || ( false && false )
// expression2
// true
// expression3 = PAREN_OPEN expression4 PAREN_CLOSE
// ( false && false )
// expression4 = expression5 booleanOr expression6
// false && false
// expression5
// false
